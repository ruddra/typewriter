<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">

  <title>{{ meta_title }}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link href="{{asset "fonts/MerriWeather.css"}}" rel="stylesheet" type="text/css">
  <link href="{{asset "fonts/LibreBaskerville.css"}}" rel="stylesheet">
  <link href="{{asset "fonts/Roboto.css"}}" rel="stylesheet">
  <link rel="stylesheet" href="{{asset "css/evil-icons.min.css"}}">
  <link rel="stylesheet" href="{{asset "css/main.min.css"}}">

  {{! Ghost outputs important style and meta data with this tag }}
  {{ghost_head}}
</head>
<body class="{{body_class}} typesettings">

  {{! Everything else gets inserted here }}
  <div class="wrapper">
    <div class="row">
      <div class="column medium-3 large-3">
        {{navigation}}
      </div>
      <div class="column medium-9 large-9">
        {{{body}}}
      </div>
    </div>
  </div>

  {{> "footer"}}

  {{! Ghost outputs important scripts and data with this tag }}
  {{ghost_foot}}

  {{! The main JavaScript files }}
  <script type="text/javascript" src="{{asset "js/jquery-2.1.4.min.js"}}"></script>
  <script type="text/javascript" src="{{asset "js/jquery.fitvids.js"}}"></script>
  <script type="text/javascript" src="{{asset "js/script.js"}}"></script>
  <script src="{{asset "js/evil-icons.min.js"}}"></script>

</body>
</html>